{
  "name": "class-widget",
  "version": "0.4.0",
  "main": "electron/main.js",
  "description": "초등학교 교실용 전자칠판 위젯",
  "author": "ClassKit Team",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "set NODE_ENV=development && electron .",
    "electron:build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win --x64",
    "dist": "npm run build && npm run electron:build"
  },
  "build": {
    "appId": "kr.school.classkit.widget",
    "productName": "우리반 위젯",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "우리반 위젯",
      "perMachine": false,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "license": "LICENSE.txt"
    },
    "publish": {
      "provider": "github",
      "owner": "cavintop57-ai",
      "repo": "classkit"
    }
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.13.3",
    "vite": "^5.0.0"
  }
}
